{
  "name": "fxp-cli",
  "version": "1.0.0",
  "description": "CLI Tool for FiveM & RedM Modders - Resource Creation and Management",
  "main": "src/index.js",
  "bin": {
    "fxp": "./src/index.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "test": "jest",
    "build": "npm run build:win && npm run build:linux",
    "build:win": "pkg . --target node18-win-x64 --output dist/fxp-win.exe",
    "build:linux": "pkg . --target node18-linux-x64 --output dist/fxp-linux",
    "dev": "node src/index.js",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.js"
  },
  "pkg": {
    "assets": [
      "templates/**/*",
      "data/**/*",
      "node_modules/figlet/fonts/**/*"
    ],
    "outputPath": "dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/talbergh/fxp.git"
  },
  "keywords": [
    "fivem",
    "redm",
    "cli",
    "modding",
    "resource",
    "template",
    "generator"
  ],
  "author": "talbergh",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/talbergh/fxp/issues"
  },
  "homepage": "https://github.com/talbergh/fxp#readme",
  "dependencies": {
    "commander": "^11.0.0",
    "inquirer": "^8.2.6",
    "chalk": "^4.1.2",
    "figlet": "^1.6.0",
    "fs-extra": "^11.1.1",
    "axios": "^0.27.2",
    "semver": "^7.5.4",
    "ora": "^5.4.1",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "eslint": "^8.47.0",
    "prettier": "^3.0.2",
    "jest": "^29.6.4",
    "pkg": "^5.8.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov"],
    "testMatch": ["**/tests/**/*.test.js"]
  }
}
